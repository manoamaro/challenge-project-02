<%= form_for(custom_field) do |f| %>
  <% if custom_field.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(custom_field.errors.count, "error") %> prohibited this custom_field from being saved:</h2>

      <ul>
      <% custom_field.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :field_type %>
    <%= f.select :field_type, CustomField.field_types.keys.to_a %>
  </div>

  <div class="field">
    <%= f.label :default_value %>
    <%= f.text_field :default_value %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
